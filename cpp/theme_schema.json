{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "bg": {
      "$ref": "#/$defs/color",
      "description": "The global background color"
    },
    "fg": {
      "$ref": "#/$defs/color",
      "description": "The global foreground color"
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "unevaluatedProperties": false,
        "allOf": [
          {
            "$ref": "#"
          },
          {
            "properties": {
              "time": {
                "type": "string",
                "pattern": "\\d*[smhDWMY]",
                "description": "The time ([#]u) where this override should apply"
              }
            }
          },
          {
            "not": {
              "required": [
                "events"
              ]
            }
          },
          {
            "not": {
              "required": [
                "$schema"
              ]
            }
          }
        ]
      }
    }
  },
  "unevaluatedProperties": false,
  "$defs": {
    "color": {
      "type": "string",
      "pattern": "#[0-9a-f]{6}"
    }
  }
}
